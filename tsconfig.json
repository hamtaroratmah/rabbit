{
  "compilerOptions": {
    "strict": true,
    "jsx": "react-native",
    "target": "es6",
    "module": "commonjs",
    "moduleResolution": "node",
    "outDir": "dist",
    "sourceMap": false,
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ]
    }
  },
  "include": [
    "src/**/*.ts",
    "tests/**/*.ts"
  ],
  "exclude": [
    "__tests__/**/*-test.ts"
  ],
  "extends": "expo/tsconfig.base"
}
